@model DoctorAppointment.Models.Doctor

@{
    ViewBag.Title = "Edit Doctor";
    ViewBag.FormTitle = "Edit Doctor";
    ViewBag.SubmitText = "Save Changes";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@ViewBag.FormTitle</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Doctor", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DoctorId)

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Name, "Full Name", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter full name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "doctor@example.com", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Enter phone number" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Specialization, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Specialization, new { @class = "form-control", placeholder = "E.g., Cardiologist" })
                        @Html.ValidationMessageFor(m => m.Specialization, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.Label("Department", new { @class = "form-label" })
                        @Html.DropDownList("DepartmentId", null, "-- Select Department --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.DepartmentId, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.Label("Organization", new { @class = "form-label" })
                        @Html.DropDownList("OrganizationId", null, "-- Select Organization --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.OrganizationId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Fee, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Fee, new { @class = "form-control", placeholder = "E.g., Fee" })
                        @Html.ValidationMessageFor(model => model.Fee, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.Label("Doctor Picture", new { @class = "form-label" })
                        <input type="file" name="PictureFile" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.Picture))
                        {
                            <img src="@Url.Content(Model.Picture)" width="100" class="img-thumbnail mt-2" />
                        }
                        @Html.ValidationMessageFor(m => m.Picture, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="@ViewBag.SubmitText" class="btn btn-success me-2" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .card {
        border-radius: 15px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-success {
        min-width: 120px;
    }
</style>
