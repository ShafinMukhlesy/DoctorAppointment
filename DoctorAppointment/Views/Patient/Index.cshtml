@model IEnumerable<DoctorAppointment.Models.Patient>

@{
    ViewBag.Title = "Patients List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Patients List</h2>
        @Html.ActionLink("Create New Patient", "CreateEdit", null, new { @class = "btn btn-primary" })
    </div>

    <table id="patientTable" class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Image</th>
                <th>Full Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Gender</th>
                <th>DOB</th>
                <th>Blood Group</th>
                <th>Weight (kg)</th>
                <th>Height (cm)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PatientImage))
                        {
                            <img src="@Url.Content(item.PatientImage)" width="70" height="70" class="img-thumbnail rounded" />
                        }
                        else
                        {
                            <img src="~/images/no-photo.png" width="70" height="70" class="img-thumbnail rounded" />
                        }
                    </td>
                    <td>@(item.FirstName + " " + item.LastName)</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Gender</td>
                    <td>@item.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>@item.BloodGroup</td>
                    <td>@item.Weight</td>
                    <td>@item.Height</td>
                    <td>
                        @Html.ActionLink("Edit", "CreateEdit", new { id = item.PatientId }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.PatientId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#patientTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
